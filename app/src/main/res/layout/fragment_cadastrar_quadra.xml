<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_CadastrarCidade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.locador.cadastrar.CadastrarQuadraFragment">


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_nome_quadra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o nome da quadra" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tipo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_tipo_quadra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o tipo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preÃ§o"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_preco_quadra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o preco" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="status:"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/spinner_status_quadra"
        android:layout_width="374dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCadastrar_quadra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:text="Cadastrar"
        android:layout_marginTop="24dp"/>

</LinearLayout>