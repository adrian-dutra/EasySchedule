<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_locacao_quadra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.LocacaoQuadra.LocacaoQuadraFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inicio:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_hora_ini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o inicio em horas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fim:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editText_hora_fim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o fim em horas"
         />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_registrar_locacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_button"
        android:text="salvar" />

</LinearLayout>
